
@model DreamworldHomepage.ViewModels.HomepageViewModel

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Html.RenderPartial("Partials/_Navigation", Model.Navigation);
    Html.RenderPartial("Partials/_Banner", Model.Banner);
}

@*@Html.Partial("Partials/_ParkPricing", Model.ParkPricing);*@
@Html.Partial("Partials/_ParkInformation", Model.ParkInformation);
        

@{
    Html.RenderPartial("Partials/_WhatsGoingOn", Model.WhatsGoingOn);
    Html.RenderPartial("Partials/_YourFavouriteDreamworldExperiences", Model.YourFavouriteDreamworldExperiences);
    Html.RenderPartial("Partials/_ParkUpdates", Model.ParkUpdates);
    Html.RenderPartial("Partials/_HelpMeFindTheRightTicket", Model.HelpMeFindTherightTicket);
    Html.RenderPartial("Partials/_LiveAtDreamworld", Model.LiveAtDreamworld);
    Html.RenderPartial("Partials/_SignUpForSpecialOffers", Model.SignUpforSpecialOffers);
    Html.RenderPartial("Partials/_Footer", Model.Footer);
}


@section scripts{
    <script>
        $(function () {

            $('.whats-going-on-slick').slick({
                arrows: false,
                infinite: false,
                slidesToShow: 4,
                slidesToScroll: 1,
                dots: false,
                centerMode: false,
                centerPadding: 0,
                initialSlide: 0
            });


            $(".park-updates-slick").slick({
                arrows: false,
                infinite: false,
                slidesToShow: 3,
                slidesToScroll: 1,
                dots: false,
                centerMode: true,
                centerPadding: 0,
                initialSlide: 1,
            });


            $(".help-me-slick").slick({
                centerMode: false,
                arrows: false,
                infinite: false,
                slidesToShow: 2,
                slidesToScroll: 1,
                dots: true,
                centerMode: false,
                centerPadding: 0,
                initialSlide: 1
            });

            $("#collage-container").height($("#collage-container").width() * 0.6);
            $(window).resize(function (event) {
                $("#collage-container").height($("#collage-container").width() * 0.6);
            })

            $("#instagram-container").height($("#instagram-container").width() * 0.25);
            $(window).resize(function (event) {
                $("#instagram-container").height($("#instagram-container").width() * 0.25);
            })

            $("#what-right").click(function () {
                $('.whats-going-on-slick').slick("slickNext");
            });

            $("#what-left").click(function () {
                $('.whats-going-on-slick').slick("slickPrev");
            });

            $("#update-right").click(function () {
                $('.park-updates-slick').slick("slickNext");
            });

            $("#update-left").click(function () {
                $('.park-updates-slick').slick("slickPrev");
            });

        });
    </script>
}
