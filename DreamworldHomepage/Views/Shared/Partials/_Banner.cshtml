@model DreamworldHomepage.ViewModels.BannerViewModel


<style>
	#banner {   
		position: relative;
		z-index: -100;
	}

	#banner-content{
		position: absolute;
		top: 30%;
	}

	#banner-content h1{
		margin-top:0;
		font-family: "Amsi Pro Black";
		font-size: 60pt;
		max-width: 500px;
		color: #ffffff;
		line-height: 65px;
		margin-bottom: 5%;
	}

	#learn-more{
		width: 150px;
		height: 60px;
		background-color: #fff;
		border-radius: 5px;
		text-align:center;
		vertical-align: middle;
	}

	#banner-content a{
		font-family: "Amsi Pro";
		color: #0091D5;
		font-size: 20px;
		font-weight: bold;
		text-decoration:none;
		line-height: 60px;   
	}

	#banner img{			
		width: 100%;
		height: auto;
	}

	#banner-mobile{
		display: block;
	}
	
	#banner-desk{
		display: none;
	}

	@@media (min-width: 576px) {
		#banner-desk{
			display: block;
		}
		#banner-mobile{
			display: none;
		}
	}

</style>

<div id="banner">
	<img id="banner-desk" src="/Content/images/Banner/Homepage_head-banner_desktop.jpg" alt="" />
	<img id="banner-mobile" src="~/Content/images/Banner/Homepage_head-banner_mobile.jpg" alt="" />
	<section>
		<div id="banner-content">            
			<h1>@Model.Title</h1>
			<div id="learn-more">
				<a href="#">@Model.ButtonText</a>
			</div>
		</div>
	</section>
</div>
