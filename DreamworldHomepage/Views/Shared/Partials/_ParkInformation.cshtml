<section id="park-information-section" class="color-beige">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="park-info-section" class="col-12 centre-div">
                    <div id="park-prices-section">
                        <div id="prices-menu" class="center-text">
                            <ul>
                                <li><a href="#">1 DAY</a></li>
                                <li><a class="active" href="#">3 DAY</a></li>
                                <li><a href="#">7 DAY</a></li>
                                <li><a href="#">ANNUAL PASS</a></li>
                            </ul>
                        </div>
                        <div id="price-content">
                            <div id="pricing-details">
                                <div class="price">
                                    <p class="price-label">Adults</p>
                                    <p class="price-amount">$99</p>
                                </div>
                                <div class="price">
                                    <p class="price-label">Children</p>
                                    <p class="price-amount">$89</p>
                                    <p></p>
                                </div>
                                <div class="price">
                                    <p class="price-label">Pensioners</p>
                                    <p class="price-amount">$89</p>
                                </div>
                                <div class="price">
                                    <p class="price-label">Family<br><span>(2 adults and 2 children)</span></p>
                                    <p class="price-amount">$320</p>
                                </div>
                            </div>
                            <div class="button">
                                <a href="#">Buy Tickets! &lt;img&gt;</a>
                            </div>
                        </div>
                    </div>
                    <div id="park-hours-section">
                        <div>
                            <h1><span>Open now</span> until 6:30pm</h1>
                        </div>
                        <div>
                            <div class="park-info color-yellow">
                                <img src="~/Content/images/ParkInformation/icon_directions.svg" alt="Directions" />                                
                                <p>Get Directions</p>                                
                            </div>
                            <div class="park-info color-red">
                                <img src="~/Content/images/ParkInformation/icon_ride height.svg" alt="Ride Height"/>                                
                                <p>Check Ride<br />Height Limits</p>
                            </div>
                            <div class="park-info color-blue">
                                <img src="~/Content/images/ParkInformation/icon_park map.svg" alt="Park Map" />                                
                                <p>Download<br />Park Map</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



