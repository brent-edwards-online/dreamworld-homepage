@model DreamworldHomepage.ViewModels.YourFavouriteDreamworldExperiencesViewModel

<style>
    #fav-experiences {
        background-color: #F4F4F4;
        padding-top: 80px;
        padding-bottom: 80px;
        padding-left: 100px;
        padding-right: 100px;
        color: #4E20A1;
        margin-left: auto;
        margin-right: auto;
    }

    #fav-experiences h1{
        text-align: center
    }

    #fav-experiences img{
        padding: 0;
        margin: 0;
    }
    
    .collage div {
        border: solid 1px black;
    }

    .collage-img { 
        background-size: cover;
        transition: all .2s ease-in-out; 
    }

    .collage-img:hover{
        transform: scale(1.05, 1.05);
        box-shadow: 0 4px 2px -2px black;
    }

    #collage-container{
    
    }

    .collage-lg{
        border: solid black 1px; 
        width:40%;
        height:66%; 
    }

    .collage-md{
        border: solid black 1px; 
        width:40%;
        height:33%; 
    }

    .collage-sm{
        border: solid black 1px; 
        width:20%;
        height:33%; 
    }

    #collage-sm-0 {        
        border: solid black 1px; 
        background-image:Url(@Model.Small0.Image); 
        background-size: cover;
    }

    #collage-sm-1 {        
        border: solid black 1px; 
        background-image:Url(@Model.Small2.Image); 
        background-size: cover;
    }

</style>

<section id="fav-experiences" class="component">
    <h1>@Model.Title</h1>

    <div id="collage-container" style="max-width: 1080px; border: solid hotpink 1px">        
        <div id="collage-lg-0" class="collage-img"></div>
        <div id="collage-lg-1" class="collage-img"></div>

        <div id="collage-md-0" class="collage-img"></div>
        <div id="collage-md-1" class="collage-img"></div>        

        <div id="collage-sm-0" class="collage-img"></div>
        <div id="collage-sm-1" class="collage-img"></div>
        <div id="collage-sm-2" class="collage-img"></div>
        <div id="collage-sm-3" class="collage-img"></div>
        <div id="collage-sm-4" class="collage-img"></div>               
    </div>
</section>
