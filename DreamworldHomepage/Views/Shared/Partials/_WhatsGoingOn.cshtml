@model DreamworldHomepage.ViewModels.WhatsGoingOnViewModel

<style>
    #whats-going-on {
        background-color: #F4F4F4;
        padding-bottom: 80px;
        position: relative;
    }

    #whats-going-on .slick-content {
        background-color: #fff;
        max-width: 240px;
    }

    #whats-going-on img{
        max-width: 240px;
    }

    #whats-going-on h1{
        color: #BABABA;
        font-size: 12pt;
    }

    #whats-going-on h2{
        color: #BABABA;
        font-size: 16pt;
        font-weight: bold;
    }

    .carousel-button {
        height: 70px;
        width: 70px;
        background-color: #0091d5;
        position: absolute;
        top: 50%;
        transform: translate(0%,-50%);
    }

    .slick-container {
        /*background-color: red;*/
    }
</style>

    <section id="whats-going-on" class="">
        <div class="slick-container" max-width="1080px">
            <div class="the-slick">

                @foreach (var item in Model.Items)
                {
                    <div class="slick-content">
                        <img src="@item.Image"/>
                        <h1>@item.DateText</h1>
                        <h2 style="color:@item.Color">@item.Title</h2>
                    </div>
                }
            </div>
        </div>
        
        <div class="carousel-button left">Left</div>
        <div class="carousel-button right">Right</div>
    </section>


